<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocumentReaderSample.MainPage">
    <VerticalStackLayout Spacing="30" Padding="30" VerticalOptions="Center">
        <Label Text="Document Reader" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

        <Label Text="Tap the button below to scan a document" FontSize="16" HorizontalOptions="Center" />

        <Button x:Name="ScanDocumentButton"
                Text="Scan Document"
                FontSize="20"
                BackgroundColor="Blue"
                TextColor="White"
                HeightRequest="60"
                CornerRadius="30"
                Clicked="ScanDocument_Clicked"
                HorizontalOptions="Center"
                WidthRequest="200" />

        <Label x:Name="StatusLabel" Text="Ready to scan" FontSize="14" HorizontalOptions="Center" TextColor="Gray" />
    </VerticalStackLayout>
</ContentPage>
